// First 'post' is always the user's avatar
.feed.row
  .post.col-sm-6.col-xs-12#feed-header
    .post-body
      h2.header {{ isUserLoggedIn ? currentUser.username : "Start by relaying posts you like" }}

  .post.col-sm-6.col-xs-12(ng-repeat='post in posts' ng-class="{'media-post': post.is_media}")
    .post-body
      .content
        | {{post.content}}
        | ({{ post.is_media ? "MEDIA" : "PLAIN" }})

