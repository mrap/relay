.post-info
  span.username
    | {{ post._last_relayed_by.username }}
  |  relayed a post
  p.created
    | Created {{ post.relay_count }} users away

.post-body(ng-include="'partials/'+ post._type")

.post-controls
  button.btn.btn-primary(type="button" ng-model="post.relayed" ng-click="toggleRelayPost(post)" btn-checkbox btn-checkbox-true="true" btn-checkbox-false="false")
    | {{ post.relayed ? "Un-relay" : "Relay" }}
