.topbar(feed-top)
  #brand Relay
  .inner-topbar-wrapper
    .row.inner-topbar
      .col-sm-4.header(ng-switch='isUserLoggedIn')
        div(ng-switch-when='true')
          img.img-circle.avatar(ng-src='{{ currentUser.avatar.small.defaultUrl }}')
          .info
            .username(ng-bind='currentUser.username')
        div(ng-switch-default)
          | Start by relaying posts you like
          p.small
            | or 
            a(ng-href='/login') Login
      .col-sm-8
        form.form-inline(role='form' ng-if='isUserLoggedIn' new-post-form)
          .form-group
            label.sr-only(for='newPost') New Post
            input.form-control.entry(type='text' ng-model="newPostEntry" placeholder="Post something awesome")
          button.btn.btn-default(ng-click='submitNewPost()') Do it
